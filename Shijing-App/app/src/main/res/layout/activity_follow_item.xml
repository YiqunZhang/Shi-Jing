<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView_follow_item"
        android:layout_width="324dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ui_item_follow_1" />


    <TextView
        android:id="@+id/textView_followid"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_follow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NAME"
        android:textColor="#036564"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_follow_item"
        app:layout_constraintEnd_toEndOf="@+id/imageView_follow_item"
        app:layout_constraintStart_toStartOf="@+id/imageView_follow_item"
        app:layout_constraintTop_toTopOf="@+id/imageView_follow_item" />
</androidx.constraintlayout.widget.ConstraintLayout>