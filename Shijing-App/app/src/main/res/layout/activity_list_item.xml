<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/textView_chapterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/imageView_itembg"
        android:layout_width="317dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ui_item_unlock" />


    <TextView
        android:id="@+id/textView_chapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝代"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_itembg"
        app:layout_constraintEnd_toEndOf="@+id/imageView_itembg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageView_itembg"
        app:layout_constraintTop_toTopOf="@+id/imageView_itembg" />

    <ImageView
        android:id="@+id/imageView_lock"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_itembg"
        app:layout_constraintEnd_toEndOf="@+id/imageView_itembg"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/imageView_itembg"
        app:layout_constraintTop_toTopOf="@+id/imageView_itembg"
        app:srcCompat="@drawable/ui_lock" />

    <ImageView
        android:id="@+id/imageView_list_star"
        android:layout_width="26dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_itembg"
        app:layout_constraintEnd_toEndOf="@+id/imageView_itembg"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="@+id/imageView_itembg"
        app:layout_constraintTop_toTopOf="@+id/imageView_itembg"
        android:visibility="invisible"
        app:srcCompat="@drawable/ui_view_stars" />

    <TextView
        android:id="@+id/textView_star"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="star"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_list_star"
        app:layout_constraintEnd_toEndOf="@+id/imageView_itembg"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/imageView_list_star"
        app:layout_constraintTop_toTopOf="@+id/imageView_list_star" />
</androidx.constraintlayout.widget.ConstraintLayout>